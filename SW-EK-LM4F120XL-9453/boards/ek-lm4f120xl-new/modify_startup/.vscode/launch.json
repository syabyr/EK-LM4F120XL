    "version": "0.2.0",
    "configurations": [
        
        {
            "name": "Debug (OpenOCD)",
            "request": "launch",
            "type": "cortex-debug",
            "cwd": "${workspaceRoot}",
            "executable": "${workspaceFolder}/gcc/blinky.axf",
            "preLaunchTask": "Build",


            // --- server type openocd manually ---\\
            // "servertype": "external",
            // "gdbPath": "/usr/bin/arm-none-eabi-gdb",
            // "gdbTarget": "localhost:3333",
            // ------------------------------------//


            // ------- server type openocd --------\\
            "servertype": "openocd",
            "device": "lm4f120h5qr",
            "configFiles": [
                "board/ek-lm4f120xl.cfg"
            ],
            "searchDir": [
            ],
            // ------------------------------------//


            // --------- server type qemu ---------\\
            // "servertype": "qemu",
            // "cpu": "cortex-m3",
            // "machine": "lm3s6965evb",
            // ------------------------------------//


            // allows the display of the peripheral registers in VS Code
            "svdFile": "svd/lm4f120h5qr.svd",

            // GDB client settings
            "armToolchainPath": "/usr/local/bin",
             "runToEntryPoint": "main",
             "preLaunchCommands": [
                 "monitor init",
                 "monitor reset init",
                 "monitor halt",
             ],
             "postLaunchCommands": [
                "monitor reset run",
                "monitor sleep 200",
            ],
             "postRestartCommands": [
                 "break main",
                 "continue"
             ],
        }
    ]
}